{% extends "@frontend/components/field-splidejs-slider.html.twig" %}

{% block container %}
  {% set number_of_slides = 0 %}
  {% for item in items|children %}
    {% set slide =  item.content|render|trim %}
    {% if slide %}
      {% set number_of_slides = number_of_slides + 1 %}
    {% endif %}
  {% endfor %}


  {% set multiple = number_of_slides >= 2 ? true : false %}
  {% set splidejs_config = splidejs_config|set('type', 'fade')
                                          |set('rewind', true)
                                          |set('arrows', true and multiple)
                                          |set('pagination', false and multiple)
                                          |set('autoplay', true)
                                          |set('interval', 10000)
                                          |set('speed', 2000)
                                          |set('pauseOnHover', false)
                                          |set('pauseOnFocus', false)
  %}
  {{ parent() }}
{% endblock %}
