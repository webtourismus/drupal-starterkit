{% set attributes = create_attribute({'class': ['cs-darkimg', 'splide__arrows']}) %}

{% set default_button_classes = [
  'splide__arrow',
  'absolute',
  'top-1/2',
  '-translate-y-1/2',
  'z-10',
  'cursor-pointer',
  'hocus:scale-125',
  'transition',
] %}
{% set prev_button_attributes = create_attribute({'class': default_button_classes}).addClass('left-2', 'splide__arrow--prev') %}
{% set next_button_attributes = create_attribute({'class': default_button_classes}).addClass('right-2', 'splide__arrow--next') %}

{% block container %}
  <div {{ attributes }}>
    {% block prev_button %}
      <button {{ prev_button_attributes }}>
        {% block prev_icon %}
          {{ source('@lucide/chevron-left.svg')|add_to_svg('splide__icon splide__icon--prev', {'width': 40, 'height': 40}) }}
        {% endblock %}
      </button>
    {% endblock %}
    {% block next_button %}
      <button {{ next_button_attributes }}>
        {% block next_icon %}
          {{ source('@lucide/chevron-right.svg')|add_to_svg('splide__icon splide__icon--next', {'width': 40, 'height': 40}) }}
        {% endblock %}
      </button>
    {% endblock %}
  </div>
{% endblock %}
