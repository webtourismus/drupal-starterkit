{% set heading_id = attributes.id ~ '-menu'|clean_id %}
<nav aria-labelledby="{{ heading_id }}" {{ attributes|without('aria-labelledby') }}>
  {##
   # For menus, the label is always rendered for screen readers.
   # But we use label of the menu entity (not block config entity) for easier translatability.
   # @see frontend.theme::frontend_preprocess_block().
   #}
  {% if not configuration.label_display %}
    {% set title_attributes = title_attributes.addClass('visually-hidden') %}
  {% endif %}
  <h2 {{ title_attributes.setAttribute('id', heading_id) }}>{{ label }}</h2>

  {% block content %}
    {{ content }}
  {% endblock %}
</nav>
