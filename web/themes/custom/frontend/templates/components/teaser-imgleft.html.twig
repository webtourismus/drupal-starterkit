{% extends '@frontend/components/teaser.html.twig' %}

{% block teaserable %}
  {% set texts_attributes = texts_attributes.addClass('gap-horizontal-child') %}
  {% set images_attributes = images_attributes.addClass('gap-horizontal-child') %}

  {% if entity.bundle == 'icon' %}
    {% set attributes = attributes.addClass('gap-x-[64px]') %}
    {% set text_wrapper_attributes = text_wrapper_attributes.addClass('max-sm:text-center') %}
    {% set link_wrapper_attributes = link_wrapper_attributes.addClass('max-sm:justify-center') %}

    {% if view_mode == 'teaser_imgleft' %}
      {% set attributes = attributes.addClass('sm:[grid-template-columns:min-content_1fr]') %}
    {% endif %}
  {% endif %}

  {{ parent() }}
{% endblock %}
