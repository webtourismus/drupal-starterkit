{% extends '@frontend/components/teaser.html.twig' %}

{% block teaserable %}
  {% set attributes = attributes.addClass('[grid-template-columns:1fr]', '[grid-template-rows:min-content_1fr]') %}
  {% set attributes = attributes.removeClass(paragraph_columns.prefix ~ ':' ~ paragraph_columns.classes) %}
  {% set attributes = attributes.removeClass(paragraph_gap|split(' ')) %}

  {% if entity.bundle == 'icon' %}
    {% set text_wrapper_attributes = text_wrapper_attributes.addClass('text-center') %}
    {% set link_wrapper_attributes = link_wrapper_attributes.addClass('justify-center') %}
  {% endif %}

  {{ parent() }}
{% endblock %}
