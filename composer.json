{
  "name": "webtourismus/drupal-starterkit",
  "description": "Opininated project template based on drupal/core-recommended",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "jjj/chosen": {
      "type": "package",
      "package": {
        "name": "jjj/chosen",
        "version": "2.2.1",
        "type": "drupal-library",
        "extra": {
          "installer-name": "chosen"
        },
        "source": {
          "url": "https://github.com/JJJ/chosen.git",
          "type": "git",
          "reference": "2.2.1"
        }
      }
    },
    "webtourismus/designsystem": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/designsystem.git"
    },
    "webtourismus/ebr": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/ebr.git"
    },
    "webtourismus/fa6": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/fa6.git"
    },
    "webtourismus/gin_custom": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/gin_custom.git"
    },
    "webtourismus/mailjet_iframe": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/mailjet_iframe.git"
    },
    "webtourismus/maintenance": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/maintenance.git"
    },
    "webtourismus/drupal-metapackage": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/drupal-metapackage.git"
    },
    "webtourismus/seasonal_paragraphs": {
      "type": "vcs",
      "url": "https://bitbucket.org/webtourismus/seasonal_paragraphs.git"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "drupal/core-composer-scaffold": true,
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "cweagans/composer-patches": true
    },
    "sort-packages": true
  },
  "autoload": {
    "files": [
      "load.environment.php"
    ]
  },
  "scripts": {
    "post-drupal-scaffold-cmd": [
      "patch -p1 < ./private/scaffold/htaccess.patch"
    ],
    "post-create-project-cmd": [
      "touch ./.env && chmod 644 ./.env",
      "./vendor/bin/robo kickoff:init-dev",
      "./vendor/bin/robo kickoff:install-drupal",
      "./vendor/bin/robo kickoff:init-git"
    ],
    "post-update-cmd": [
      "cp ./web/modules/contrib/maintenance/src/Robo/RoboFile.php ./"
    ]
  },
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[web-root]/sites/default/default.settings.php": {
          "append": "./private/scaffold/default.settings.php.append"
        }
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/profiles/custom/{$name}": [
        "type:drupal-custom-profile"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ]
    },
    "enable-patching": true,
    "patchLevel": {
      "drupal/core": "-p2"
    }
  },
  "require": {
    "webtourismus/drupal-metapackage": "^1.0.2"
  }
}
